{% extends 'base.html.twig' %}

{% block title %}Login Page{% endblock %}

{% block body %}
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .form-bg {
            background: #FFFFFF;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form img {
            width: 100px;
            height: 100px;
        }

        .heading h3 {
            font-weight: bold;
            padding: 9px 10px;
        }
    </style>

    <div class="form-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-offset-3 col-md-6 login-container">
                    <form method="post" class="form-horizontal w-100">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="heading text-center">
                            <img src="/assets/images/icon.png" alt="appcake icon"/>
                            <h3>Login</h3>
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                                   class="form-control" autocomplete="username" required autofocus>
                        </div>

                        <div class="form-group mt-3">
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary text-white btn-default text-uppercase"
                                    style="max-width: 100%;width: 100%">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
